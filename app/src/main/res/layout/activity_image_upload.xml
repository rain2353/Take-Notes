<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Picture.ImageUploadActivity.ImageUploadActivity">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/ImageUploadToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f6416c"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:subtitleTextColor="#FFFFFF"
                app:titleTextColor="#FFFFFF" />

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:ems="10"
                android:hint="제목을 작성해주세요."
                android:inputType="textPersonName" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/SelectImageView0"
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:srcCompat="@drawable/logo1" />

                    <ImageView
                        android:id="@+id/SelectImageView1"
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:srcCompat="@drawable/logo1" />

                    <ImageView
                        android:id="@+id/SelectImageView2"
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:srcCompat="@drawable/logo1" />

                    <ImageView
                        android:id="@+id/SelectImageView3"
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:srcCompat="@drawable/logo1" />

                    <ImageView
                        android:id="@+id/SelectImageView4"
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:srcCompat="@drawable/logo1" />

                    <ImageView
                        android:id="@+id/SelectImageView5"
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:srcCompat="@drawable/logo1" />

                    <ImageView
                        android:id="@+id/SelectImageView6"
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:srcCompat="@drawable/logo1" />

                    <ImageView
                        android:id="@+id/SelectImageView7"
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:srcCompat="@drawable/logo1" />

                    <ImageView
                        android:id="@+id/SelectImageView8"
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:srcCompat="@drawable/logo1" />

                    <ImageView
                        android:id="@+id/SelectImageView9"
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:srcCompat="@drawable/logo1" />

                </LinearLayout>
            </HorizontalScrollView>
            <ImageView
                android:id="@+id/ImageCheck"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/logo1" />

            <EditText
                android:id="@+id/editContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginBottom="10sp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="내용을 작성해주세요."
                android:inputType="textMultiLine" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>